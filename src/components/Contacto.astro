---
import Formulario from "../components/Formulario.astro";
---

<section
  id="contacto"
  class="flex flex-col justify-center items-center bg-black pb-10 p-2 md:p-5 md:pb-20">

  <div id="container-titulo" class="flex flex-col justify-center items-center gap-y-3 md:gap-y-5 my-8 md:my-16">
    <h2 class="text-3xl md:text-4xl text-center text-white font-dm font-semibold">Contacto</h2>
    <p class="text-base md:text-xl text-center text-balance text-[#c0c0c0] font-poppins font-extralight leading-normal">Comun√≠cate con nosotros para comenzar a transformar tus ideas!</p>
  </div>

  <div
    id="container-contacto"
    class="flex flex-col md:flex-row justify-evenly items-start w-[85%] md:w-[70%]
    p-5 md:p-10 bg-[#131313] md:gap-y-0 gap-y-6 rounded-md overflow-hidden">
    <!-- formulario -->
    <article class="w-full md:w-[70%]">

      <Formulario />

    </article>

    <!-- mapa/contacto -->

    <article id="mapa" class="flex flex-col justify-center items-start gap-y-3 w-full md:w-[70%]">

      <iframe
        class="rounded-md w-full h-72"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1647.028848899268!2d-56.15618225496949!3d-34.920613116978416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x959f811d46d7a485%3A0x20fba9142d50c276!2sParque%20Juan%20Zorrilla%20de%20San%20Martin!5e0!3m2!1ses!2suy!4v1709081455734!5m2!1ses!2suy"

        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      >
      </iframe>

      

      
    </article>

  </div>


</section>

<style>
  #container-titulo {
    view-timeline-name: --container;
    view-timeline-axis: block;

    animation-timeline: --container;
    animation-name: titulo;
    animation-range: entry 20% cover 75%;
    animation-fill-mode: both;
  }

  @keyframes titulo {
    from {
      scale: 0.9;
      opacity: 0;
    }

    to {
      opacity: 1;
      scale: 1;
    }
  }


  #container-contacto {
    view-timeline-name: --content;
    view-timeline-axis: block;

    animation-timeline: --content;
    animation-name: mostrar;
    animation-range: entry 10% cover 70%;
    animation-fill-mode: both;
  }

  @keyframes mostrar {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }
</style>
